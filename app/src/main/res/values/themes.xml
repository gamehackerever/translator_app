<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Learning" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <!-- Customize your theme here. -->
        <item name="actionBarSize">150dp</item>
        <item name="android:labelTextSize">500sp</item>
        <item name="android:background">@color/black</item>
        <item name="android:fontFamily">@font/apple_bold</item>
        <item name="android:textSize">200sp</item>
        <item name="textAppearanceTitleLarge">@string/app_name</item>
    </style>

    <style name="mySpinnerItemStyle" parent="Theme.Material3.Light">
        <item name="android:gravity">start</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/apple</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>